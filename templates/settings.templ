			<div class="form-group">
				<div class="settings-label">
					<label for="suggestions">{ i18n.CreateSuggestions }:</label>
					<span>These suggestions are given when adding words for a category.</span>
				</div>
				if settings.Suggestions == true {
					<input id="suggestions" name="suggestions" type="checkbox" checked/>
				} else {
					<input id="suggestions" name="suggestions" type="checkbox"/>
				}
			</div>
			<div class="form-group">
				<div class="settings-label">
					<label for="unhide-hints">{ i18n.UnhideHints }:</label>
					<span>Hints take 5 seconds to display by default.</span>
				</div>
				if settings.UnhideHints == true {
					<input id="unhide-hints" name="unhide-hints" type="checkbox" checked/>
				} else {
					<input id="unhide-hints" name="unhide-hints" type="checkbox"/>
				}
			</div>
			<div class="buttons">
				<button type="submit">{ i18n.SaveChanges }</button>
			</div>
